<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context="com.android.jdrd.robot.activity.SJX_MainActivity">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@mipmap/action_bar">

        <RelativeLayout
            android:id="@+id/setting_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgViewmapnRight"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@animator/btn_more_selector" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/dining"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
        <RelativeLayout
            android:id="@+id/img_cancel_re"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/len_10"
                android:background="@animator/btn_clone_right" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_robot"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_below="@+id/main"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/aas"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <GridView
                    android:id="@+id/robotgirdview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#EEEEEE"
                    android:dividerHeight="9dp"
                    android:gravity="center"
                    android:horizontalSpacing="15dp"
                    android:stretchMode="spacingWidthUniform"
                    android:verticalSpacing="15dp"></GridView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_desk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_robot"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="53dp">
            <TextView
                android:text="@string/card_settings"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#333333"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="13dp"
                android:background="@mipmap/xyb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/area_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="17dp"
                android:gravity="center"
                android:text="@string/choose_area"
                android:textColor="#333333"
                android:textSize="16sp" />
            <RelativeLayout
                android:id="@+id/config_redact_re"
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/config_redact"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17dp"
                    android:background="@animator/btn_direct_selector"
                    android:textColor="@color/black"
                    android:textSize="25sp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridView
                android:id="@+id/gview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/lay"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:columnWidth="109dp"
                android:divider="#EEEEEE"
                android:dividerHeight="1dp"
                android:numColumns="auto_fit" />

            <RelativeLayout
                android:id="@+id/lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_48"
                android:layout_alignParentBottom="true"
                android:background="#548cff"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <TextView
                    android:id="@+id/operate_back"
                    android:layout_width="@dimen/len_52"
                    android:layout_height="@dimen/len_52"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="返回"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/operate_ok"
                    android:layout_width="@dimen/len_52"
                    android:layout_height="@dimen/len_52"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="确定"
                    android:textSize="17sp" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/map_right_Ralative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/main">

        <LinearLayout
            android:id="@+id/linearlayout_all"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#548CFF"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#6496FA" />

            <ListView
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/up"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="320dp"
        android:layout_marginRight="12dp"
        android:background="@animator/btn_up_selector"
        android:visibility="gone" />

    <Button
        android:id="@+id/down"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="260dp"
        android:layout_marginRight="12dp"
        android:background="@animator/btn_down_selector"
        android:visibility="gone" />

    <Button
        android:id="@+id/left"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="12dp"
        android:background="@animator/btn_left_selector"
        android:visibility="gone" />

    <Button
        android:id="@+id/right"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="140dp"
        android:layout_marginRight="12dp"
        android:background="@animator/btn_right_selector"
        android:visibility="gone" />

    <Button
        android:id="@+id/stop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="12dp"
        android:background="@animator/btn_stop_selector"
        android:visibility="gone" />

    <Button
        android:id="@+id/shrink"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="12dp"
        android:background="@animator/btn_shrink_selector"
        android:visibility="gone" />
</RelativeLayout>