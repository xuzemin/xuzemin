<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context="com.android.jdrd.robot.activity.MainActivity">
    <RelativeLayout
        android:id="@+id/main"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height">
        <RelativeLayout
            android:id="@+id/setting_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/back"
                android:background="@drawable/btn_back_selector"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="17dp"
                android:layout_height="21dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="@string/command_deract"
            />
        <Button
            android:background="@color/green"
            android:textColor="@animator/btn_delete_selector"
            android:id="@+id/btn_delete"
            android:layout_marginRight="5dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="@string/btn_delete"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/linear_goal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="53dp">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/goalname"
                        android:layout_marginLeft="10dp"
                        android:textColor="#333333"
                        android:gravity="left|center_vertical"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/goal"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:gravity="right|center"
                        android:layout_marginRight="20dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:text="请选择站点"
                        android:layout_alignParentRight="true"
                        />
                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="13dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/xyb"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_direction"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="53dp">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/direction"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center_vertical"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/direction"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:background="@color/white"
                        android:gravity="right|center"
                        android:layout_marginRight="20dp"
                        android:text="请选择方向"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="13dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/xyb"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_speed"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="53dp">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/speed_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text="@string/speed"
                        android:textColor="#333333"
                        android:gravity="left|center_vertical"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:inputType="number"
                        android:id="@+id/speed"
                        android:textColorHint="@color/aliceblue"
                        android:textColor="#999999"
                        android:textSize="15sp"
                        android:background="@color/white"
                        android:layout_marginRight="20dp"
                        android:gravity="right|center"
                        android:layout_alignParentRight="true"
                        android:text="请输入速度"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="13dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/xyb"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_mp3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="53dp">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/mp3"
                        android:layout_marginLeft="10dp"
                        android:textColor="#333333"
                        android:gravity="left|center_vertical"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/mp3"
                        android:inputType="number"
                        android:textColorHint="@color/aliceblue"
                        android:layout_width="wrap_content"
                        android:textColor="#999999"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:text="请输入MP3通道"
                        android:background="@color/white"
                        android:gravity="right|center"
                        android:textSize="15sp"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="13dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/xyb"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_outime"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="53dp">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/outime"
                        android:layout_marginLeft="10dp"
                        android:textColor="#333333"
                        android:gravity="left|center_vertical"
                        android:textSize="15sp"
                        android:id="@+id/textView6" />

                    <TextView
                        android:id="@+id/outime"
                        android:inputType="number"
                        android:textColor="#999999"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="20dp"
                        android:background="@color/white"
                        android:layout_alignParentRight="true"
                        android:text="请输入超时时间"
                        android:gravity="right|center"
                        android:textColorHint="@color/aliceblue"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="13dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/xyb"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_shownum"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="53dp">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/shownum"
                        android:layout_marginLeft="10dp"
                        android:textColor="#333333"
                        android:gravity="left|center_vertical"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:inputType="number"
                        android:id="@+id/shownum"
                        android:textColor="#999999"
                        android:textSize="15sp"
                        android:layout_marginRight="20dp"
                        android:background="@color/white"
                        android:textColorHint="@color/aliceblue"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="请输入显示编号"
                        android:gravity="right|center"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="13dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/xyb"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_showcolor"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="53dp">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/showcolor"
                        android:layout_marginLeft="10dp"
                        android:textColor="#333333"
                        android:gravity="left|center_vertical"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:inputType="number"
                        android:id="@+id/showcolor"
                        android:layout_width="wrap_content"
                        android:textColorHint="@color/aliceblue"
                        android:textColor="#999999"
                        android:textSize="15sp"
                        android:layout_marginRight="20dp"
                        android:text="请输入显示颜色"
                        android:background="@color/white"
                        android:gravity="right|center"
                        android:layout_alignParentRight="true"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="13dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/xyb"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <Button
                android:layout_marginTop="52dp"
                android:id="@+id/btn_sure"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:background="@animator/btn_sure_selector"
                android:layout_height="46dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
