<?xml version="1.0" encoding="utf-8"?>
<resources> android:orientation="vertical"

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="first_title">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>
    <style name="ll_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="rl_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <!--        <item name="android:focusableInTouchMode">true</item>-->
        <item name="android:background">@drawable/selector_item</item>

    </style>

    <style name="item_textView">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="item_textView_right">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">70dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="more_image_style">
        <item name="android:layout_width">@dimen/item_more_image_width</item>
        <item name="android:layout_height">@dimen/item_more_image_height</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd</item>
        <item name="android:background">@mipmap/icon_more</item>
    </style>


    <style name="switch_image_style">
        <item name="android:layout_width">58.5dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@mipmap/on</item>
    </style>

    <style name="divider_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>


    <style name="ctv_dialog_style">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="DayTheme" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="dra_page_1">@drawable/icon_bg1</item>
        <item name="dra_page_2">@drawable/icon_bg2</item>
        <item name="dra_page_3">@drawable/icon_bg3</item>
        <item name="dra_page_4">@drawable/icon_bg4</item>
        <item name="dra_page_5">@drawable/icon_bg5</item>
        <item name="dra_page_6">@drawable/icon_bg6</item>
        <item name="dra_page_7">@drawable/icon_bg7</item>
        <item name="dra_page_8">@drawable/icon_bg8</item>
        <item name="dra_dlg_2">@drawable/icon_dlg_bg2</item>
        <item name="dra_dlg_3">@drawable/icon_dlg_bg3</item>
        <item name="dra_dlg_4">@drawable/icon_dlg_bg4</item>
        <item name="dra_dlg_6">@drawable/icon_dlg_bg6</item>
        <item name="dra_dlg_8">@drawable/icon_dlg_bg8</item>
        <item name="dra_icon_1">@drawable/icon_app_bg1</item>
        <item name="dra_icon_2">@drawable/icon_app_bg2</item>
        <item name="dra_icon_3">@drawable/icon_app_bg3</item>
        <item name="dra_icon_4">@drawable/icon_app_bg4</item>
        <item name="dra_icon_5">@drawable/icon_app_bg5</item>
        <item name="dra_icon_6">@drawable/icon_app_bg6</item>
        <item name="dra_icon_7">@drawable/icon_app_bg7</item>
        <item name="dra_icon_8">@drawable/icon_app_bg8</item>
    </style>
    <style name="NightTheme" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="dra_page_1">@drawable/nig_icon_bg</item>
        <item name="dra_page_2">@drawable/nig_icon_bg</item>
        <item name="dra_page_3">@drawable/nig_icon_bg</item>
        <item name="dra_page_4">@drawable/nig_icon_bg</item>
        <item name="dra_page_5">@drawable/nig_icon_bg</item>
        <item name="dra_page_6">@drawable/nig_icon_bg</item>
        <item name="dra_page_7">@drawable/nig_icon_bg</item>
        <item name="dra_page_8">@drawable/nig_icon_bg</item>
        <item name="dra_dlg_2">@drawable/nig_icon_dlg_bg</item>
        <item name="dra_dlg_3">@drawable/nig_icon_dlg_bg</item>
        <item name="dra_dlg_4">@drawable/nig_icon_dlg_bg</item>
        <item name="dra_dlg_6">@drawable/nig_icon_dlg_bg</item>
        <item name="dra_dlg_8">@drawable/nig_icon_dlg_bg</item>
        <item name="dra_icon_1">@drawable/nig_icon_app_bg</item>
        <item name="dra_icon_2">@drawable/nig_icon_app_bg</item>
        <item name="dra_icon_3">@drawable/nig_icon_app_bg</item>
        <item name="dra_icon_4">@drawable/nig_icon_app_bg</item>
        <item name="dra_icon_5">@drawable/nig_icon_app_bg</item>
        <item name="dra_icon_6">@drawable/nig_icon_app_bg</item>
        <item name="dra_icon_7">@drawable/nig_icon_app_bg</item>
        <item name="dra_icon_8">@drawable/nig_icon_app_bg</item>
    </style>


</resources>