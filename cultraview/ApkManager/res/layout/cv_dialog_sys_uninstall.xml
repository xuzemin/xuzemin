<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="729dp"
    android:layout_height="528dp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:scaleType="fitXY" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="@string/dialog_title"
        android:textColor="@color/white_color"
        android:textSize="31sp" />

    <FrameLayout
        android:layout_width="516dp"
        android:layout_height="91dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"
        android:background="@drawable/dialog_picturelayout_bg" >

        <ImageView
            android:id="@+id/imageView_dialog6"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/textView_dialog1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="104dp"
            android:layout_marginTop="19dp"
            android:textColor="@color/white_eighty"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView_filesize"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="104dp"
            android:layout_marginTop="53dp"
            android:textColor="@color/white_eighty"
            android:textSize="22sp" />

        <FrameLayout
            android:layout_width="95dp"
            android:layout_height="71dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="411dp" >

            <ImageView
                android:layout_width="95dp"
                android:layout_height="71dp"
                android:background="@color/btn_bg_color" />

            <TextView
                android:id="@+id/textView_dialog2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:lines="1"
                android:textColor="@color/white_eighty"
                android:textSize="24sp" />
        </FrameLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="730dp"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="77dp"
                android:layout_marginRight="77dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="@string/dialog_apks_vision_name"
                    android:textColor="@color/white_eighty"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/textView_dialog3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white_eighty"
                    android:textSize="22sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="77dp"
                android:layout_marginRight="77dp"
                android:layout_marginTop="27dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="@string/dialog_apks_vision_code"
                    android:textColor="@color/white_eighty"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/textView_dialog4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white_eighty"
                    android:textSize="22sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="77dp"
                android:layout_marginRight="77dp"
                android:layout_marginTop="27dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView_dialog_path1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="top"
                    android:text="@string/dialog_file_pakege_name"
                    android:textColor="@color/white_eighty"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/textView_dialog5"
                    android:layout_width="fill_parent"
                    android:layout_height="74dp"
                    android:gravity="top"
                    android:lineSpacingExtra="7sp"
                    android:singleLine="false"
                    android:textColor="@color/white_eighty"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dialog_bottom"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout1"
            android:gravity="center" >

            <TextView
                android:layout_width="516dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/btn_bg_color"
                android:gravity="center"
                android:text="@string/is_sys_app"
                android:textColor="@color/white_color"
                android:textSize="22sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>