<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="@dimen/ll_main_content_width_size"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:orientation="vertical"
             android:padding="5dp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent" >

    <TextView
            style="@style/first_title"
            android:id="@+id/tv_about_tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/item_left_margin"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="@dimen/content_sp" />

    <TextView
            style="@style/first_title"
            android:id="@+id/tv_about_tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/item_right_margin"
            android:gravity="right"
            android:textColor="@color/white"
            android:textSize="@dimen/content_sp" />

</FrameLayout>